<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | BiblioDesign CMS</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-50 font-['Inter']">
  <!-- Sidebar -->
  <div class="fixed left-0 top-0 h-full w-64 bg-gray-900 text-white p-6">
    <div class="text-xl font-semibold mb-8">BiblioDesign CMS</div>
    <nav class="space-y-2">
      <a href="/admin" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-gray-800">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        Dashboard
      </a>
      <a href="/admin/content" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Site Content
      </a>
      <a href="/admin/testimonials" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
        </svg>
        Testimonials
      </a>
      <a href="/admin/portfolio" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Portfolio
      </a>
      <a href="/admin/team" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
        Team
      </a>
      <a href="/admin/inquiries" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        Inquiries
        <% if (inquiries && inquiries.length) { %>
        <span class="ml-auto bg-blue-500 text-xs px-2 py-0.5 rounded-full"><%= inquiries.length %></span>
        <% } %>
      </a>
    </nav>
    
    <div class="absolute bottom-6 left-6 right-6">
      <a href="/" class="flex items-center gap-2 text-gray-400 hover:text-white text-sm mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
        View Site
      </a>
      <a href="/admin/logout" class="flex items-center gap-2 text-gray-400 hover:text-white text-sm">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        Logout
      </a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="ml-64 p-8">
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
      <p class="text-gray-500 mt-1">Welcome to BiblioDesign CMS</p>
    </div>
    
    <!-- Stats -->
    <div class="grid md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
        <div class="text-3xl font-bold text-gray-900"><%= inquiries ? inquiries.length : 0 %></div>
        <div class="text-gray-500 text-sm mt-1">Total Inquiries</div>
      </div>
      <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
        <div class="text-3xl font-bold text-gray-900">
          <%= inquiries ? inquiries.filter(i => new Date(i.date) > new Date(Date.now() - 7*24*60*60*1000)).length : 0 %>
        </div>
        <div class="text-gray-500 text-sm mt-1">This Week</div>
      </div>
      <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
        <div class="text-3xl font-bold text-green-600">Active</div>
        <div class="text-gray-500 text-sm mt-1">Site Status</div>
      </div>
      <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
        <div class="text-3xl font-bold text-gray-900">5</div>
        <div class="text-gray-500 text-sm mt-1">Pages</div>
      </div>
    </div>
    
    <!-- Recent Inquiries -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
      <div class="p-6 border-b border-gray-100">
        <h2 class="text-lg font-semibold">Recent Inquiries</h2>
      </div>
      <% if (inquiries && inquiries.length) { %>
      <div class="divide-y divide-gray-100">
        <% inquiries.slice(-5).reverse().forEach(function(inq) { %>
        <div class="p-6">
          <div class="flex justify-between items-start mb-2">
            <div class="font-medium"><%= inq.name %></div>
            <div class="text-sm text-gray-400"><%= new Date(inq.date).toLocaleDateString() %></div>
          </div>
          <div class="text-sm text-gray-500 mb-2"><%= inq.email %></div>
          <div class="text-sm text-gray-600 line-clamp-2"><%= inq.message %></div>
        </div>
        <% }); %>
      </div>
      <div class="p-4 border-t border-gray-100">
        <a href="/admin/inquiries" class="text-blue-600 hover:text-blue-700 text-sm font-medium">View all inquiries â†’</a>
      </div>
      <% } else { %>
      <div class="p-6 text-center text-gray-400">No inquiries yet</div>
      <% } %>
    </div>
  </div>
</body>
</html>
