<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portfolio | BiblioDesign CMS</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-50 font-['Inter']">
  <!-- Sidebar -->
  <div class="fixed left-0 top-0 h-full w-64 bg-gray-900 text-white p-6">
    <div class="text-xl font-semibold mb-8">BiblioDesign CMS</div>
    <nav class="space-y-2">
      <a href="/admin" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">Dashboard</a>
      <a href="/admin/content" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">Site Content</a>
      <a href="/admin/testimonials" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">Testimonials</a>
      <a href="/admin/portfolio" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-gray-800">Portfolio</a>
      <a href="/admin/team" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">Team</a>
      <a href="/admin/inquiries" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">Inquiries</a>
    </nav>
    <div class="absolute bottom-6 left-6">
      <a href="/" class="text-gray-400 hover:text-white text-sm">View Site</a>
      <span class="mx-2 text-gray-600">|</span>
      <a href="/admin/logout" class="text-gray-400 hover:text-white text-sm">Logout</a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="ml-64 p-8">
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-gray-900">Portfolio</h1>
      <p class="text-gray-500 mt-1">Showcase your completed projects</p>
    </div>
    
    <!-- Add New -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
      <h2 class="text-lg font-semibold mb-6">Add New Project</h2>
      <form action="/admin/portfolio" method="POST" enctype="multipart/form-data" class="space-y-4">
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Project Title</label>
            <input type="text" name="title" required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
            <input type="text" name="location" placeholder="e.g., Brooklyn, NY"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none">
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
          <textarea name="description" rows="3" required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none"></textarea>
        </div>
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Number of Books</label>
            <input type="number" name="books"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Project Image</label>
            <input type="file" name="image" accept="image/*"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none">
          </div>
        </div>
        <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
          Add Project
        </button>
      </form>
    </div>
    
    <!-- List -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
      <div class="p-6 border-b border-gray-100">
        <h2 class="text-lg font-semibold">Existing Projects</h2>
      </div>
      <% if (projects && projects.length) { %>
      <div class="divide-y divide-gray-100">
        <% projects.forEach(function(p) { %>
        <div class="p-6 flex gap-6">
          <% if (p.image) { %>
          <img src="<%= p.image %>" alt="<%= p.title %>" class="w-32 h-24 object-cover rounded-lg">
          <% } else { %>
          <div class="w-32 h-24 bg-gray-100 rounded-lg flex items-center justify-center text-gray-400">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <% } %>
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-1">
              <span class="font-medium"><%= p.title %></span>
              <span class="text-sm text-gray-400"><%= p.location %></span>
              <% if (p.books) { %>
              <span class="text-sm text-blue-600"><%= p.books %> books</span>
              <% } %>
            </div>
            <p class="text-gray-600 text-sm"><%= p.description %></p>
          </div>
          <form action="/admin/portfolio/delete/<%= p.id %>" method="POST" onsubmit="return confirm('Delete this project?')">
            <button type="submit" class="text-red-500 hover:text-red-700 text-sm">Delete</button>
          </form>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="p-6 text-center text-gray-400">No projects yet</div>
      <% } %>
    </div>
  </div>
</body>
</html>
