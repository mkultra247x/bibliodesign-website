<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Team | BiblioDesign CMS</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-50 font-['Inter']">
  <!-- Sidebar -->
  <div class="fixed left-0 top-0 h-full w-64 bg-gray-900 text-white p-6">
    <div class="text-xl font-semibold mb-8">BiblioDesign CMS</div>
    <nav class="space-y-2">
      <a href="/admin" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">Dashboard</a>
      <a href="/admin/content" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">Site Content</a>
      <a href="/admin/testimonials" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">Testimonials</a>
      <a href="/admin/portfolio" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">Portfolio</a>
      <a href="/admin/team" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-gray-800">Team</a>
      <a href="/admin/inquiries" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">Inquiries</a>
    </nav>
    <div class="absolute bottom-6 left-6">
      <a href="/" class="text-gray-400 hover:text-white text-sm">View Site</a>
      <span class="mx-2 text-gray-600">|</span>
      <a href="/admin/logout" class="text-gray-400 hover:text-white text-sm">Logout</a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="ml-64 p-8">
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-gray-900">Team Members</h1>
      <p class="text-gray-500 mt-1">Manage your team profiles</p>
    </div>
    
    <!-- Add New -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
      <h2 class="text-lg font-semibold mb-6">Add Team Member</h2>
      <form action="/admin/team" method="POST" enctype="multipart/form-data" class="space-y-4">
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
            <input type="text" name="name" required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Role / Title</label>
            <input type="text" name="role" required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none">
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Bio</label>
          <textarea name="bio" rows="3" required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none"></textarea>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Photo</label>
          <input type="file" name="photo" accept="image/*"
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none">
        </div>
        <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
          Add Team Member
        </button>
      </form>
    </div>
    
    <!-- List -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
      <div class="p-6 border-b border-gray-100">
        <h2 class="text-lg font-semibold">Current Team</h2>
      </div>
      <% if (team && team.length) { %>
      <div class="divide-y divide-gray-100">
        <% team.forEach(function(m) { %>
        <div class="p-6 flex gap-6">
          <% if (m.photo) { %>
          <img src="<%= m.photo %>" alt="<%= m.name %>" class="w-20 h-20 object-cover rounded-full">
          <% } else { %>
          <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center text-gray-400">
            <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
            </svg>
          </div>
          <% } %>
          <div class="flex-1">
            <div class="font-medium"><%= m.name %></div>
            <div class="text-sm text-blue-600 mb-2"><%= m.role %></div>
            <p class="text-gray-600 text-sm"><%= m.bio %></p>
          </div>
          <form action="/admin/team/delete/<%= m.id %>" method="POST" onsubmit="return confirm('Remove this team member?')">
            <button type="submit" class="text-red-500 hover:text-red-700 text-sm">Remove</button>
          </form>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="p-6 text-center text-gray-400">No team members yet</div>
      <% } %>
    </div>
  </div>
</body>
</html>
