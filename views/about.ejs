<% const pageTitle = 'About Us'; %>
<%- include('partials/header') %>

<!-- Hero -->
<section class="py-24 bg-gradient-to-br from-cream to-sage/20">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="max-w-3xl">
      <span class="text-terracotta font-medium text-sm tracking-widest uppercase">Our Story</span>
      <h1 class="font-serif text-5xl md:text-6xl font-semibold mt-3 mb-6">About <%= content.siteName %></h1>
      <p class="text-xl text-espresso/70 leading-relaxed"><%= content.tagline %></p>
    </div>
  </div>
</section>

<!-- Story -->
<section class="py-24">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16">
      <div>
        <h2 class="font-serif text-4xl font-semibold mb-8">Our Philosophy</h2>
        <div class="prose prose-lg text-espresso/70 space-y-6">
          <% content.aboutFull.split('\n\n').forEach(function(para) { %>
          <p class="leading-relaxed"><%= para %></p>
          <% }); %>
        </div>
      </div>
      <div>
        <div class="sticky top-32">
          <div class="bg-espresso text-cream rounded-2xl p-10">
            <h3 class="font-serif text-2xl font-semibold mb-4">Our Mission</h3>
            <p class="text-cream/80 leading-relaxed text-lg"><%= content.mission %></p>
          </div>
          
          <div class="grid grid-cols-2 gap-6 mt-8">
            <div class="bg-cream rounded-xl p-6 text-center">
              <div class="font-serif text-3xl font-bold text-terracotta">500+</div>
              <div class="text-sm text-espresso/60 mt-1">Libraries Curated</div>
            </div>
            <div class="bg-cream rounded-xl p-6 text-center">
              <div class="font-serif text-3xl font-bold text-terracotta">50K+</div>
              <div class="text-sm text-espresso/60 mt-1">Books Placed</div>
            </div>
            <div class="bg-cream rounded-xl p-6 text-center">
              <div class="font-serif text-3xl font-bold text-terracotta">15</div>
              <div class="text-sm text-espresso/60 mt-1">Years Experience</div>
            </div>
            <div class="bg-cream rounded-xl p-6 text-center">
              <div class="font-serif text-3xl font-bold text-terracotta">98%</div>
              <div class="text-sm text-espresso/60 mt-1">Satisfaction Rate</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Team -->
<section class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-16">
      <span class="text-terracotta font-medium text-sm tracking-widest uppercase">Meet the Team</span>
      <h2 class="font-serif text-4xl md:text-5xl font-semibold mt-3">The Curators</h2>
    </div>
    
    <div class="grid md:grid-cols-3 gap-10">
      <% if (team && team.length) { %>
        <% team.forEach(function(member) { %>
        <div class="group">
          <div class="aspect-[3/4] rounded-2xl bg-gradient-to-br from-sage/30 to-terracotta/30 mb-6 overflow-hidden">
            <% if (member.photo) { %>
            <img src="<%= member.photo %>" alt="<%= member.name %>" class="w-full h-full object-cover">
            <% } else { %>
            <div class="w-full h-full flex items-center justify-center">
              <svg class="w-24 h-24 text-espresso/20" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
              </svg>
            </div>
            <% } %>
          </div>
          <h3 class="font-serif text-2xl font-semibold"><%= member.name %></h3>
          <div class="text-terracotta font-medium mb-3"><%= member.role %></div>
          <p class="text-espresso/60 leading-relaxed"><%= member.bio %></p>
        </div>
        <% }); %>
      <% } %>
    </div>
  </div>
</section>

<!-- Values -->
<section class="py-24">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-16">
      <span class="text-terracotta font-medium text-sm tracking-widest uppercase">What Drives Us</span>
      <h2 class="font-serif text-4xl md:text-5xl font-semibold mt-3">Our Values</h2>
    </div>
    
    <div class="grid md:grid-cols-4 gap-8">
      <div class="text-center">
        <div class="w-16 h-16 rounded-full bg-sage/20 flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
        </div>
        <h3 class="font-serif text-xl font-semibold mb-2">Passion</h3>
        <p class="text-espresso/60 text-sm">We genuinely love books and believe in their transformative power.</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 rounded-full bg-terracotta/20 flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-terracotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        <h3 class="font-serif text-xl font-semibold mb-2">Creativity</h3>
        <p class="text-espresso/60 text-sm">Every space is unique, and every collection tells a story.</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 rounded-full bg-gold/20 flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
          </svg>
        </div>
        <h3 class="font-serif text-xl font-semibold mb-2">Quality</h3>
        <p class="text-espresso/60 text-sm">We source only the finest editions and take care in every detail.</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 rounded-full bg-espresso/10 flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-espresso" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h3 class="font-serif text-xl font-semibold mb-2">Service</h3>
        <p class="text-espresso/60 text-sm">Your satisfaction and delight are our ultimate measures of success.</p>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
