<% const pageTitle = 'Contact'; %>
<%- include('partials/header') %>

<!-- Hero -->
<section class="py-24 bg-gradient-to-br from-cream to-terracotta/10">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="max-w-3xl">
      <span class="text-terracotta font-medium text-sm tracking-widest uppercase">Get In Touch</span>
      <h1 class="font-serif text-5xl md:text-6xl font-semibold mt-3 mb-6">Contact Us</h1>
      <p class="text-xl text-espresso/70 leading-relaxed">Ready to transform your space? Let's start a conversation.</p>
    </div>
  </div>
</section>

<!-- Contact Content -->
<section class="py-24">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16">
      <!-- Contact Form -->
      <div>
        <% if (success) { %>
        <div class="mb-8 p-6 bg-sage/20 rounded-xl border border-sage/30">
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <div>
              <div class="font-semibold">Thank you for reaching out!</div>
              <div class="text-sm text-espresso/60">We'll be in touch within 24 hours.</div>
            </div>
          </div>
        </div>
        <% } %>

        <h2 class="font-serif text-3xl font-semibold mb-6">Book a Consultation</h2>
        <form action="/contact" method="POST" class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium mb-2" for="name">Full Name *</label>
              <input type="text" id="name" name="name" required
                class="w-full px-4 py-3 rounded-xl border border-espresso/20 focus:border-terracotta focus:ring-2 focus:ring-terracotta/20 outline-none transition-all">
            </div>
            <div>
              <label class="block text-sm font-medium mb-2" for="email">Email *</label>
              <input type="email" id="email" name="email" required
                class="w-full px-4 py-3 rounded-xl border border-espresso/20 focus:border-terracotta focus:ring-2 focus:ring-terracotta/20 outline-none transition-all">
            </div>
          </div>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium mb-2" for="phone">Phone</label>
              <input type="tel" id="phone" name="phone"
                class="w-full px-4 py-3 rounded-xl border border-espresso/20 focus:border-terracotta focus:ring-2 focus:ring-terracotta/20 outline-none transition-all">
            </div>
            <div>
              <label class="block text-sm font-medium mb-2" for="location">Location</label>
              <input type="text" id="location" name="location" placeholder="City, State"
                class="w-full px-4 py-3 rounded-xl border border-espresso/20 focus:border-terracotta focus:ring-2 focus:ring-terracotta/20 outline-none transition-all">
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium mb-2" for="service">Service Interest</label>
            <select id="service" name="service"
              class="w-full px-4 py-3 rounded-xl border border-espresso/20 focus:border-terracotta focus:ring-2 focus:ring-terracotta/20 outline-none transition-all bg-white">
              <option value="">Select a service...</option>
              <option value="essential">Essential Collection (15-25 books)</option>
              <option value="statement">Statement Library (50-100 books)</option>
              <option value="estate">Estate Collection (100+ books)</option>
              <option value="refresh">Seasonal Refresh</option>
              <option value="not-sure">Not sure yet</option>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium mb-2" for="message">Tell Us About Your Project *</label>
            <textarea id="message" name="message" rows="5" required
              placeholder="Describe your space, style preferences, and what you're hoping to achieve..."
              class="w-full px-4 py-3 rounded-xl border border-espresso/20 focus:border-terracotta focus:ring-2 focus:ring-terracotta/20 outline-none transition-all resize-none"></textarea>
          </div>
          
          <div>
            <label class="block text-sm font-medium mb-2" for="budget">Approximate Budget</label>
            <select id="budget" name="budget"
              class="w-full px-4 py-3 rounded-xl border border-espresso/20 focus:border-terracotta focus:ring-2 focus:ring-terracotta/20 outline-none transition-all bg-white">
              <option value="">Select budget range...</option>
              <option value="under-2k">Under $2,000</option>
              <option value="2k-5k">$2,000 - $5,000</option>
              <option value="5k-10k">$5,000 - $10,000</option>
              <option value="10k-25k">$10,000 - $25,000</option>
              <option value="25k+">$25,000+</option>
            </select>
          </div>
          
          <button type="submit" class="w-full px-8 py-4 bg-espresso text-cream font-medium rounded-full hover:bg-terracotta transition-all">
            Send Inquiry
          </button>
        </form>
      </div>
      
      <!-- Contact Info -->
      <div class="lg:pl-8">
        <div class="sticky top-32">
          <h2 class="font-serif text-3xl font-semibold mb-8">Other Ways to Reach Us</h2>
          
          <div class="space-y-8">
            <div class="flex gap-4">
              <div class="w-12 h-12 rounded-full bg-espresso/5 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-espresso" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <div class="font-medium mb-1">Email</div>
                <a href="mailto:<%= content.email %>" class="text-terracotta hover:underline"><%= content.email %></a>
              </div>
            </div>
            
            <div class="flex gap-4">
              <div class="w-12 h-12 rounded-full bg-espresso/5 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-espresso" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <div class="font-medium mb-1">Phone</div>
                <a href="tel:<%= content.phone %>" class="text-terracotta hover:underline"><%= content.phone %></a>
              </div>
            </div>
            
            <div class="flex gap-4">
              <div class="w-12 h-12 rounded-full bg-espresso/5 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-espresso" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <div class="font-medium mb-1">Studio</div>
                <div class="text-espresso/60"><%= content.address %></div>
              </div>
            </div>
          </div>
          
          <div class="mt-12 p-8 bg-espresso text-cream rounded-2xl">
            <h3 class="font-serif text-xl font-semibold mb-3">Consultation Hours</h3>
            <div class="space-y-2 text-cream/70 text-sm">
              <div class="flex justify-between">
                <span>Monday - Friday</span>
                <span>9:00 AM - 6:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday</span>
                <span>10:00 AM - 4:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday</span>
                <span>By appointment</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
